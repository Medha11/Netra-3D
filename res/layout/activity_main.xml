<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >
   
   <ImageView
        android:id="@+id/imageViews"
       android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/netra3dlogo" />
    
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViews"
      android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
         android:paddingBottom="25dp"
        
        android:src="@drawable/selectfromoptions" />
    
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView2"
       
        android:layout_below="@+id/imageView2"
        android:background="@drawable/structureofeye2"
         android:paddingBottom="15dp"
       />
 

     <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
       
        android:layout_below="@+id/imageView2"
        android:background="@drawable/workingofeye2"
         android:paddingBottom="15dp"
         />
     
    
      <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="150dp"
        android:layout_height="100dp"
       
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:background="@drawable/adaptation"
        android:paddingBottom="15dp"
       />
      
   
    <TextView
        android:id="@+id/textView2"
       android:layout_width="600dp"
        android:layout_height="75dp"
       
        android:layout_centerHorizontal="true"
       android:paddingTop="15dp"
     android:layout_below="@+id/imageButton1"
     
        android:text="An interactive, 3-dimensional and user-friendly approach to enhance and assess the learning 

experience of Indian students about the various features of the human eye and its mechanisms, as per the requirements of their syllabus."
  
        android:textSize="16dp" />
</RelativeLayout>
